<?xml version="1.0" encoding="utf-8"?>

<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
               android:angle="45"
               android:centerX="35%"
				android:centerColor="#7995A8"
				android:startColor="#E8E8E8"
				android:endColor="#000000"
				android:type="linear" />
            <size android:width="30dp"
               android:height="30dp"/>
            <stroke
                android:width="3dp"
				android:color="@color/android_green"/>
            <corners
                android:radius="25dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/Orange"
                android:startColor="@color/win8_orange"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/green" />
            <corners
                android:radius="25dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>

    <item> 
         <layer-list>
             <!-- SHADOW -->   
             <item>
                 <shape>
                     <solid android:color="#1A808080"
                            />
                     <corners android:radius="25dp"/>
                 </shape>
             </item>
                 <item 
                    
                     
                    >       
        <shape>
           <gradient
               android:angle="45"
               android:centerX="35%"
				android:centerColor="@color/android_green"
				android:startColor="@color/android_green"
				android:endColor="@color/android_green"
				android:type="linear" />
           <corners 
               android:radius="10dp"/>
           <size
                android:width="30dp"
               android:height="30dp"/>
            <stroke
                android:width="3dp"
				android:color="#80ffffff"/>
            <corners
                android:radius="55dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />

        </shape>
    </item>
</layer-list> 
    </item>
</selector>