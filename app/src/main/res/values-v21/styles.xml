<resources>

    <!--
        Base application theme for API 21+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- API 21 theme customizations can go here. -->
    </style>
        <style parent="android:Theme.Material" name="nadav">
            <item name="android:colorAccent">@color/accent_material_dark</item>
        </style>
        

<style name="MyCustomTheme" parent="@android:style/Theme.Material.Light">
        <item name="android:actionBarStyle">@style/MyActionBarTheme</item>
    </style>

    <style name="MyActionBarTheme" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/android_green</item>
    </style>
</resources>
